<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CheckInOut2.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="CheckInOut2.Views.AddWorkerWindow"
        x:DataType="vm:AddWorkerWindowViewModel"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        Icon="/Assets/avalonia-logo.ico"
        Title="Dodavanje radnika"
        SizeToContent="WidthAndHeight"
        CanResize="False">
        
    <Border BorderThickness="1 0 1 1" BorderBrush="Gray">
        <StackPanel>
            <TextBox Text="{Binding firstName}" Watermark="Ime" FontSize="{Binding fontSize}" Width="300" Margin="10 5 10 5"/>
            <TextBox Text="{Binding lastName}" Watermark="Prezime" FontSize="{Binding fontSize}" Width="300" Margin="10 5 10 5"/>
            <TextBlock Name="chip" Text="{Binding chip}" FontSize="{Binding fontSize}" Width="300" Margin="10 5 10 5"/>
            <Button Content="Dodaj" HorizontalAlignment="Center" FontSize="{Binding fontSize}" Margin="10 5 10 5" Command="{Binding addWorker}"/>
        </StackPanel>
    </Border>
</Window>